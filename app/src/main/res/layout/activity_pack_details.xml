<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.PackDetailsActivity">

    <ImageView
            android:src="@drawable/sao_paulo_sp"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/pack_details_banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/banner"
            android:scaleType="centerCrop"
    />
    <TextView
            android:id="@+id/pack_details_city"
            android:text="@string/sao_paulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/pack_details_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/pack_details_banner"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/pack_details_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="2 days"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/pack_details_city"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:id="@+id/pack_details_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05/01 - 07/12 de 2021"
            android:layout_margin="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pack_details_days"
    />

    <TextView
            android:id="@+id/pack_details_final_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preco_final"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/pack_details_days"
            app:layout_constraintTop_toBottomOf="@id/pack_details_city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 239,90"
            android:textSize="20sp"
            android:textColor="#00ff00"
            android:layout_margin="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/pack_details_period"
            app:layout_constraintTop_toBottomOf="@id/pack_details_final_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"

    />
    <Button
            android:id="@+id/button"
            android:text="@string/realizar_pagamento"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pack_details_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintCircleRadius="50dp"
            app:cornerRadius="10dp" app:backgroundTint="#FF8737"/>

</androidx.constraintlayout.widget.ConstraintLayout>